
{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Clarify",
    "permissions": [
        "activeTab", 
        "storage",
        "clipboardRead",
        "clipboardWrite"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Clarify"
    },
    "web_accessible_resources": [
        {
            "resources": ["popup/*"],
            "matches": ["<all_urls>"]
        }
    ]
}